<body>
  <div class="jumbotron ScndJTron">

    <div class="container">

      <div class="page-header">
        <h3 class="sub_title">All Robots</h3>
      </div>

      <div class="row robot-showcase-row">
        <% @robots.each do |robot| %>

        <div class="col-md-3 robot-showcase"
        <img class="media-object" src="<%= robot.avatar %>" alt="...">

        <hr>
        <h4 id="index-robot-name">
          <a href="/robots/<%= robot.id %>"><%= robot.name %></a></h4>

          <div class="btn-group btn-group-xs edit-delete" role="group" aria-label="...">
            <button type"button" class="edit-delete-btn">
              <a href="/robots/<%= robot.id %>/edit"><i class"glyphicon glyphicon-edit"></i></a>
            </button>
          </div>

          <div class="btn-group btn-group-xs edit-delete" role="group" aria-label="...">
            <form action="/robots/<%= robot.id%>" method="POST">
              <button type="submit" class="edit-delete-btn">
                <i class="glyphicon glyphicon-trash"></i>
                <input type="hidden" name="_method" value="DELETE">
              </button>
            </form>
          </div>
        </div>

          <% end %>
      </div>
    </div>
  </body>
